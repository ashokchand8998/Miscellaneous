{
    "manifest_version": 3,
    "name": "Video rotator",
    "description": "Google Photos video player orientation rotator",
    "version": "1.0",
    "action": {
        "default_popup": "index.html",
        "default_icon": "images/icon.png"
    },
    "icons": {
        "16": "images/icon.png",
        "32": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "matches": [
                "https://photos.google.com/*",
                "https://youtube.googleapis.com/*",
                "<all_urls>"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "webNavigation",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://photos.google.com/*",
        "https://youtube.googleapis.com/*"
    ]
}